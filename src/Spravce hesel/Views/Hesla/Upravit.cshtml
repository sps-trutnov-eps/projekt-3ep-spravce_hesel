@model Heslo
@{
    ViewData["Title"] = "Upravit heslo";
    List<string>? sdilenoPro = (List<string>?)ViewData["sdilenoPro"];
}

@{
    @if (sdilenoPro != null && sdilenoPro.Count != 0)
    {
        <article>
            @foreach (string jmeno in sdilenoPro)
            {
                <div class="upozorneni">
                    <span class="icon-error ikona"></span>
                    <div>
                        <h3>Upozornění</h3>
                        <div>Toto heslo již sdílíte s @jmeno</div>
                    </div>
                </div>
            }
        </article>
    }
}

<article class="pridat split">
    <h2>Upravit záznam hesla</h2>
    
    <section>
        <h3>Informace o záznamu</h3>
        <form asp-action="Upravit" asp-route-id="@Model.ID" method="post" onkeydown="return event.key != 'Enter';">
            <input name="sluzba" placeholder="Zadejte jméno služby..." type="text" class="server" value="@Model.Sluzba"/><br />
            <input name="jmeno" placeholder="Zadejte uživatelské jméno / E-Mail..." type="text" class="username" value="@Model.Jmeno"/><br />
            <input name="heslo" placeholder="Zadejte heslo..." type="password" id="gen_vystup" value="@Model.desifrovano" required />
            <button type="button" id="zobrazeni_hesla_tlacitko" class="icon-eye" onclick="zobrazeni_hesla()"></button><br />
            <input value="Upravit záznam" type="submit"/>
        </form>
    </section>

    <section>
        <h3>Generátor hesla</h3>
        <form id="generator" onchange="delka_hesla_aktualizace()" onkeydown="return event.key != 'Enter';">
            <div>
                <h4>Délka hesla</h4>
                <input type="range" min="4" max="64" value="16" id="gen_delka" title="Délka hesla" /><input type="text" id="posuvnikVystup" onchange="delka_hesla_zapis()" value="16" placeholder="16" />
            </div>

            <div>
                <h4>Složení hesla</h4>
                <input type="checkbox" checked id="gen_mala" /> Malá písmena<br />
                <input type="checkbox" checked id="gen_velka" /> Velká písmena<br />
                <input type="checkbox" id="gen_cisla" /> Čísla<br />
                <input type="checkbox" id="gen_znaky" /> Speciální znaky
            </div>

            <div>
                <br />
                <button type="button" onclick="generace()">Generovat</button>
            </div>
        </form>
    </section>
</article>
<script src="~/js/generator.js" asp-append-version="true"></script>
