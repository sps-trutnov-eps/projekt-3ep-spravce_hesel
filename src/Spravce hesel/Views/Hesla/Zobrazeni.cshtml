@model List<Heslo>

@{
    ViewData["Title"] = "Moje hesla";
}

<article>
    <h2>Moje hesla</h2>
    <p class="center">
        <button type="button" class="icon-plus" onclick="window.location.href = '/Hesla/Pridat'">Pøidat heslo</button>
    </p>
    @{
        foreach (Heslo heslo in Model)
        {
            <div class="heslo_div">
                <div class="sluzba"><a title="Zobrazit heslo" href="JavaScript:zobrazitHeslo(@heslo.ID)">@heslo.Sluzba</a><span><a class="icon-edit" title="Upravit heslo" href="/Hesla/Upravit"></a><a class="icon-bin" title="Odstranit heslo" href="/Hesla/Odstranit"></a></span></div>
                <div class="jmeno">@heslo.Jmeno</div><div class="heslo">••••••••</div>
            </div>
        }
        if (Model.Count == 0)
        {
            <p>Zatím nemáte pøidané žádné heslo</p>
        }
        else
        {
            <partial name="_DetailHesla" />
        }
    }
</article>