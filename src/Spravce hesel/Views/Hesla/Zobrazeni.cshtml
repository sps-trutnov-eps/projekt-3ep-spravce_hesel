@model List<Heslo>
@{
    ViewData["Title"] = "Moje hesla";
}

<article>
    <h2>Moje hesla</h2>
    <p class="center"><a class="icon-plus" href="/Hesla/Pridat">Pøidat heslo</a></p>
    @{
        foreach (Heslo heslo in Model)
        {
            <div class="heslo_div">
                <div class="sluzba"><a title="Zobrazit heslo" href="JavaScript:zobrazitHeslo(@heslo.ID)">@heslo.Sluzba @heslo.ID</a><span><a class="icon-edit" title="Upravit heslo" href="/Hesla/Upravit"></a><a class="icon-bin" title="Odstranit heslo" href="/Hesla/Odstranit"></a></span></div>
                <div class="jmeno">@heslo.Jmeno</div>
            </div>
        }
        @if (Model.Count == 0)
        {
            <p>Zatím nemáte pøidané žádné heslo</p>
            <p><a href="/Hesla/Pridat">Pøidat?</a></p>
        }
        else
        {
            <div class="skryty" id="detaily">
                <div>
                    <div id="sluzba"></div>
                    <div id="jmeno"></div>
                    <div id="heslo"></div>
                </div>
            </div>
        }
    }
</article>