@model int;
@using Microsoft.AspNetCore.WebUtilities

@{
    ViewData["Title"] = "Chyba";
}

<article class="center chyba">
    <h2>Jejda!<br />Tohle se nemělo stát!</h2>
    <div class="icon-error"><br />@Model</div>
    <div>
        @switch (Model)
        {
            case 400:
                <text>Neplatný požadavek.</text>
                break;
            case 401:
                <text>Neautorizovaný přístup.</text>
                break;
            case 403:
                <text>Zakázaný přístup.</text>
                break;
            case 404:
                <text>Stránka nenalezena.</text>
                break;
            case 500:
                <text>Interní chyba.</text>
                break;
            default:
                <text>@ReasonPhrases.GetReasonPhrase(Model)</text>
                break;
        }
    </div>
</article>