@{
    Layout = "_Layout";
    ViewData["Title"] = "Registrace";
}

<article>
    <section>
        <h2>Přihlášení</h2>
        <div><a href="/Ucet/Prihlaseni">Přihlášení</a> | <a href="javascript:void(0)" class="odkaz-vybran">Registrace</a></div>
    </section>

    <section>
        <form action="/Ucet/Registrace" method="post">
            <input type="text" name="jmeno" placeholder="Zadejte uživatelské jméno..." /><br />
            <input type="email" name="email" placeholder="Zadejte E-Mail..." /><br />
            <input type="password" name="heslo" placeholder="Zadejte nové heslo..." /><br />
            <input type="password" name="kontrola_hesla" placeholder="Znovu pro kontrolu..." /><br />
            <input type="submit" value="Zaregistrovat se" />
        </form>
    </section>
</article>
