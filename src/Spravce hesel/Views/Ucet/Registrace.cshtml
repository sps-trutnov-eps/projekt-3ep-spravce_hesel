@model uzivatel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Registrace";
}

<article>
    <section>
        <h2>Přihlášení</h2>
        <div><a href="/Ucet/Prihlaseni">Přihlášení</a> | <a href="javascript:void(0)" class="odkaz-vybran">Registrace</a></div>
    </section>

    <section>
        <form action="/Ucet/Registrace" method="post">
            <input type="text" asp-for="Username" placeholder="Zadejte uživatelské jméno..." /><br />
            <span asp-validation-for="Username" class="text-danger"></span><br />
            <input type="email" asp-for="Email" placeholder="Zadejte E-Mail..." /><br />
            <span asp-validation-for="Email" class="text-danger"></span><br />
            <input type="password" asp-for="Heslo" placeholder="Zadejte nové heslo..." /><br />
            <span asp-validation-for="Heslo" class="text-danger"></span><br />
            <input type="password" name="Kontrola_hesla" placeholder="Znovu pro kontrolu..." /><br /><br />
            <input type="submit" value="Zaregistrovat se" />
        </form>
    </section>
</article>
