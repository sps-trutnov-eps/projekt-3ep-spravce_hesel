@model Uzivatel
@{
    ViewData["Title"] = "Přihlášení";
    ViewData["Napoveda"] = "Ucet-Prihlaseni";
}

<article class="center">
    <h2>Přihlášení</h2>
    <div class="loginVyber"><a href="javascript:void(0)" class="vybran">Přihlášení</a> | <a href="/Ucet/Registrace">Registrace</a></div><br />
    <form action="/Ucet/Prihlaseni" method="post">
        <input type="email" asp-for="Email" placeholder="Zadejte E-Mail..." required
        oninvalid="if (this.value == ''){this.setCustomValidity('Vyplňte toto pole!')} if (this.value != ''){this.setCustomValidity('Tato emailová adresa není validní.')}"
        oninput="setCustomValidity('')" />
        <span asp-validation-for="Email" class="chyba"></span><br />
        <input type="password" name="heslo" placeholder="Zadejte heslo..." required
        oninvalid="this.setCustomValidity('Vyplňte toto pole!')"
        oninput="this.setCustomValidity('')"/>
        <span asp-validation-for="Heslo" class="chyba"></span><br />
        <input type="submit" value="Přihlásit se" />
    </form>
</article>
